# Use Red Hat's Universal Base Image with PHP 8.1
FROM registry.access.redhat.com/ubi9/php-81

# Install system dependencies
RUN yum update -y && yum install -y \
    mariadb \
    freetype \
    libjpeg \
    libpng \
    libzip \
    unzip \
    git \
    && yum clean all

# PHP extensions are typically pre-configured in Red Hat's PHP images
# If additional extensions are needed, use `yum install` or pecl as necessary.

# Install Composer globally
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Allow Composer to run as root
ENV COMPOSER_ALLOW_SUPERUSER=1

# Set working directory
WORKDIR /var/www/html

# Copy the application code
COPY * ./

# Install PHP dependencies, ignoring platform reqs
RUN composer install --no-dev --optimize-autoloader --ignore-platform-reqs
